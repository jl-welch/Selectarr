{
  "name": "selectarr",
  "version": "0.0.2",
  "description": "Simple input searching",
  "main": "dist/javascripts/selectarr.js",
  "scripts": {
    "start": "nodemon ./bin/www ",
    "build-js": "rollup --config build/rollup.config.js",
    "build-css": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/stylesheets/style.scss dist/stylesheets/style.css",
    "watch-css": "nodemon --watch src/stylesheets/ --ext scss --exec \"npm run build-css\"",
    "watch-js": "nodemon --watch src/javascripts/ --ext js --exec \"npm run build-js && npm run minify-js\"",
    "minify-js": "uglifyjs dist/javascripts/selectarr.js -o dist/javascripts/selectarr.min.js -c -m"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "node-sass": "^4.11.0",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-node-resolve": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jl-welch/Selectarr.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jl-welch/Selectarr/issues"
  },
  "homepage": "https://github.com/jl-welch/Selectarr#readme"
}
